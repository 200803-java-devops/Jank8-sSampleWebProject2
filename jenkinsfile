podTemplate(containers: [containerTemplate(name: 'maven', image: 'bensonre/jenkins-slave', ttyEnabled: true, command: 'cat')], volumes: [hostPathVolume(hostPath: '/var/run/docker.sock', mountPath: '/var/run/docker.sock')]) {
  node(POD_LABEL) {
      try{
        stage('Get a Maven project') {
            git 'https://github.com/200803-java-devops/Jank8-sSampleWebProject2'
            container('maven') {
                stage('Test') {
                    sh 'mvn test'
                }
            }
            slackSend(color: '#BDFFC3', message: 'Testing stage for $PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS')
        }
      }catch(e){
            slackSend(color: '#FF0000', message: 'Testing stage for $PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS Check console output at $BUILD_URL to view the results')
            error "${e}"
      }
    }
}
podTemplate(containers: [containerTemplate(name: 'maven', image: 'bensonre/jenkins-slave', ttyEnabled: true, command: 'cat')], volumes: [hostPathVolume(hostPath: '/var/run/docker.sock', mountPath: '/var/run/docker.sock')]) {
  node(POD_LABEL) {
      try{
        stage('Get a Maven project') {
            git 'https://github.com/200803-java-devops/Jank8-sSampleWebProject2'
            container('maven') {
                stage('Build a Maven project') {
                    sh 'mvn clean package -DskipTests'
                    sh 'cat src/main/Static/index.html'
                }
                stage('docker'){
                     sh 'docker build -t jank8s/jenkins-sample2 .'
                     withCredentials([usernamePassword(credentialsId: 'docker_hub_credentials', passwordVariable: 'token', usernameVariable: 'username')]) {
                            sh 'docker login -u '+ username+' -p '+token
                            sh 'docker push jank8s/jenkins-sample2'
                     }
                }
                stage('delivery'){
                    sh 'curl http://ec2-35-166-28-86.us-west-2.compute.amazonaws.com:30006/sample2'
                }
            }
            slackSend(color: '#BDFFC3', message: 'Build and Deployment stages for $PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS')
        }
      }catch(e){
            slackSend(color: '#FF0000', message: 'Build and Deployment stages for $PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS Check console output at $BUILD_URL to view the results.')
            error "${e}"
      }
    }
}
